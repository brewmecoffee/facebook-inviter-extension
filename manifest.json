{
  "manifest_version": 3,
  "name": "Facebook Advanced Post Inviter",
  "description": "Automatically invites people on Facebook posts with popup scrolling.",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [],

  "host_permissions": [
    "https://www.facebook.com/*"
  ],

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
